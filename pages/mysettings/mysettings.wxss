.user-info{
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  color: #24AA7D;  
  display: flex;  
  flex-direction: column;  
  align-items: center; 
}
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(36, 187, 126, 0.2);  
}  

